<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_from"
        android:id="@+id/tvSignFrom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEnterFrom"
        android:layout_below="@+id/tvSignFrom"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_whom"
        android:id="@+id/tvSignWhom"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etEnterFrom"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEnterWhom"
        android:layout_below="@+id/tvSignWhom"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_description"
        android:id="@+id/tvSignDescription"
        android:layout_below="@+id/etEnterWhom"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEnterDescription"
        android:layout_below="@+id/tvSignDescription"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_btn_send"
        android:id="@+id/btnSend"
        android:layout_below="@+id/etEnterDescription"
        android:layout_centerHorizontal="true"
        android:onClick="onClickAndSendMessage"/>


</RelativeLayout>
